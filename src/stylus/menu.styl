@import 'Variables/Customizables'
ul.dropdown-menu
	font-size: 1em
.navbar-custom
	margin-bottom 0
	font-size 0.7em
	background-color $mainColor
	border-color darken($mainColor,10)
	border-radius 0
.navbar-nav
	& > li
		& > a
			color: #FFF
.nav .open > a, .nav .open > a:hover, .nav .open > a:focus,.nav > li > a:hover, .nav > li > a:focus{
	background-color darken($mainColor,10)
}
.nav .open>a>span{
			transform rotate(90deg)
}
.dropdown-menu > li > a:hover, .dropdown-menu > li > a:focus
	background: transparent
	color: #FFF
.dropdown-menu
	background: rgba(0, 0, 0, 0.8)
	padding: 0
	margin 0
	border-radius 0

.No-Margin-Padding{
	margin 0
	padding 0
}
.dropdown-menu>li:hover{
	background $colorHover
}
.navbar-toggle .icon-bar{
	background #FFF
}
li.dropdown-submenu
	position relative
	padding: 5px 0
	border-bottom: 1px solid #000
	&:hover
		background $colorHover
.dropdown-menu > li > a{
	color #FFF
}
.caret
	transform:rotate(-90deg)
.dropdown-submenu
	position: relative
	&:active>.dropdown-menu, &:hover>.dropdown-menu
		display: block
	& > .dropdown-menu
		top: 0
		left: 100%
		-webkit-border-radius: 0 6px 6px 6px
		-moz-border-radius: 0 6px 6px 6px
		border-radius: 0 6px 6px 6px
	& > a
		&:after
			display: block
			content: " "
			float: right
			width: 0
			height: 0
			border-color: transparent
			border-style: solid
			border-width: 5px 0 5px 5px
			border-left-color: #cccccc
			margin-top: 5px
			margin-right: -10px
	&:active
		& > a
			&:after
				border-left-color: #ffffff
.dropdown-menu > .active > a, .dropdown-menu > .active > a:hover, .dropdown-menu > .active > a:focus{
	background-color $colorHover
}

.menu-item.active
	background: $mainColor;
	background: -moz-linear-gradient(top,  $mainColor 50%, darken($mainColor,50) 160%);
	background: -webkit-linear-gradient(top,  $mainColor 50%,darken($mainColor,50) 160%);
	background: linear-gradient(to bottom,  $mainColor 50%,darken($mainColor,50) 160%);
.dropdown-menu>.menu-item.active
	background-color $colorHover
.spec
	float right
	// display flex !important
	#menu-main-menu
		width 100%
		.menu-item
			.active
				background-color $colorHover
			a
	.form-inline
		// display flex
		// flex 1
	& >.navbar-form
		& > .form-group
			& > label
				color: white
				text-transform: uppercase
				font-weight: 500
			& > .form-control
				border-radius: 0
				margin: 0 0 0 1em
				border: none
				background: $colorDarken
				color: white
.SearchButton
	background: $colorDarken
	color: #fff
	border: none
	font-weight: 100
	padding: 0 1em
	text-transform: uppercase
	text-align: center
.form-group.flex-group
	display flex
label
	&.labelSearch
		align-self: center
.dropdown-submenu.pull-left
		float: none

	.dropdown-submenu
		&.pull-left
			& > .dropdown-menu
				left: -100%
				margin-left: 10px
				-webkit-border-radius: 6px 0 6px 6px
				-moz-border-radius: 6px 0 6px 6px
				border-radius: 6px 0 6px 6px





